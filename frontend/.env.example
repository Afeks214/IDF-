# IDF Testing Infrastructure - Frontend Environment Configuration

# API Configuration
VITE_API_BASE_URL=http://localhost:8000/api/v1
VITE_API_TIMEOUT=10000

# App Configuration
VITE_APP_NAME="מערכת בדיקות צה\"ל"
VITE_APP_VERSION=1.0.0

# Database Configuration
VITE_DB_RECORDS_COUNT=494

# Real-time Updates
VITE_REALTIME_ENABLED=true
VITE_REALTIME_INTERVAL=30000
VITE_REALTIME_RECONNECT_ATTEMPTS=3

# Internationalization
VITE_DEFAULT_LANGUAGE=he
VITE_SUPPORTED_LANGUAGES=he,en
VITE_RTL_ENABLED=true

# Dashboard Configuration
VITE_DASHBOARD_REFRESH_INTERVAL=30000
VITE_DASHBOARD_CHARTS_ANIMATION=true
VITE_DASHBOARD_AUTO_REFRESH=true

# Performance
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_CACHE=true
VITE_CACHE_DURATION=300000

# Security
VITE_ENABLE_SECURITY_HEADERS=true
VITE_ENABLE_RATE_LIMITING=true

# Development
VITE_DEBUG_MODE=false
VITE_MOCK_API=false
VITE_ENABLE_DEVTOOLS=true

# Environment
NODE_ENV=development

# Optional: For production builds
# VITE_API_BASE_URL=https://your-production-api.com/api/v1